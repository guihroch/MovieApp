<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextInputLayout_Login">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="hintEnabled">false</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextInputEditText_Login">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button_geral">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="Small_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>




</resources>